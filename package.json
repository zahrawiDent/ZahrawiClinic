{
  "name": "new-clinic",
  "version": "1.0.0",
  "private": true,
  "description": "Dental clinic management system with SolidJS frontend and PocketBase backend",
  "scripts": {
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\" --names \"frontend,backend\" --prefix-colors \"cyan,magenta\"",
    "dev:frontend": "cd apps/frontend && pnpm dev",
    "dev:backend": "cd apps/backend && pnpm dev",
    "build": "pnpm build:frontend && pnpm build:backend",
    "build:frontend": "cd apps/frontend && pnpm build",
    "build:backend": "cd apps/backend && pnpm build",
    "install:all": "pnpm install && cd apps/frontend && pnpm install && cd ../backend && pnpm install"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "packageManager": "pnpm@10.6.3",
  "dependencies": {
    "@formisch/solid": "^0.6.1",
    "@tanstack/solid-table": "^8.21.3",
    "valibot": "^1.1.0"
  }
}
